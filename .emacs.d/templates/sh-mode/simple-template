## Code:

set -euo pipefail

SCRIPT_NAME=$(basename "$0")

ARGS=$(getopt -n "$SCRIPT_NAME" -o 'h' -l 'help' -- "$@")

[ $? != 0 ] && exit 1

eval set -- "$ARGS"

for arg; do
    case "$arg" in
        --help | -h)
            usage
            exit 0
            ;;
        --)
            shift; break
            ;;
    esac
    shift
done

$0

## `(file-name-nondirectory (buffer-file-name))` ends here
