# -*- mode: shell-script; sh-shell: zsh; -*-

autoload -U select-word-style
select-word-style bash
zle -N unix-backward-kill-word backward-kill-word-match
zle -N unix-kill-word kill-word-match
zle -N unix-forward-word forward-word-match
zle -N unix-backward-word backward-word-match
zstyle :zle:unix-backward-word word-style space
zstyle :zle:unix-forward-word word-style space
zstyle :zle:unix-backward-kill-word word-style space
zstyle :zle:unix-kill-word word-style space
bindkey '^[^F' unix-forward-word
bindkey '^[^B' unix-backward-word
bindkey '^[^K' unix-kill-word
bindkey '^[^H' unix-backward-kill-word
